      <br>
      <div class="col-sm-4"><%= f.file_field :image %></div>
    </div>
    <div class="form-group">
      <%= f.label :intro, class: "control-label col-sm-2" %>
      <br>
      <div class="col-sm-4"><%= f.text_area :intro, class: "form-control" %></div>
    </div>
