<h1>ログイン</h1>

<%= form_tag('/login') do %>

    <div>
      <% login_ids = Hash.new()  %>
      <% @users.each do |user| %>
        <% login_ids[user.name] = user.id  %>
      <% end %>

      <%= select :login, :id, login_ids %>
    </div>

    <div>
      <%= submit_tag("ログイン", class: "btn btn-primary btn-lg") %>
    </div>

<% end %>

