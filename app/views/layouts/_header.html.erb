<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'ReplayBank', root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav" id="nav-left">
        <li class="nav-left-examples active"><%= link_to 'サンプル', examples_path %></li>
        <li class="nav-left-users"><%= link_to 'ユーザー', users_path %></li>
        <li class="nav-left-movies"><%= link_to '動画一覧', movies_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
          <% if current_user.blank? then %>
              <li><%= link_to 'ログイン', login_path %></li>
          <% else %>
            <li class="nav-name">
              <div class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= "#{current_user.name} さんこんにちは！" %></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'マイページ', current_user %></li>
                  <li><%= link_to '動画を投稿', new_movie_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'ログアウト', login_exit_path, method: :post %></li>
                </ul>
              </div>
            </li>
          <% end %>
        <li>
          <%= (image_tag current_user.image_url(:thumb), width: "60px") unless current_user.blank? %>
        </li>
      </ul>
    </div>
  </div>
</div>
