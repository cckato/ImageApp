<div class="page-header">
  <h1>ユーザーリスト</h1>
  <p class="lead">ReplayBankを使う賢しい人々</p>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>名前</th>
    <th>サムネ</th>
    <th>紹介</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= image_tag user.image_url(:thumb) if user.image? %></td>
        <td><%= user.intro %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', user, class: "btn btn-default" %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %>
            <%= link_to 'Destroy', user, method: :delete, data: {confirm: 'ほんとに消すのん？'}, class: "btn btn-default" %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-lg btn-primary" %>


